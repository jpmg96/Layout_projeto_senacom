<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/cor_primaria_app"
    android:orientation="vertical"
    tools:context="com.example.joopaulo.layout_projeto.LayoutActivity"
    android:padding="0dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.55"
        android:gravity="center"
        android:background="@drawable/gradiente_azul"
        android:elevation="@dimen/elevacao_menus"
        android:focusable="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_weight="4"
            android:padding="23dp"
            android:src="@drawable/ic_antenna_512" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:id="@+id/textView"
            android:layout_weight="3"
            android:singleLine="true"
            android:textColor="@color/cor_letras_brancas"
            android:textSize="24sp"
            android:textIsSelectable="false"
            android:gravity="center"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:elevation="@dimen/elevacao_cards"
        android:background="#ffffff"
        android:padding="@dimen/activity_horizontal_margin"
        android:nestedScrollingEnabled="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#BEBEBE"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:layout_weight="5"
                android:src="@android:drawable/ic_menu_mapmode" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Mapa"
                android:id="@+id/mapa"
                android:layout_above="@+id/reclamações"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@drawable/botao_main"
                android:textSize="16sp"
                android:textColor="@color/cor_letras_cinzas"
                android:singleLine="false"
                android:elegantTextHeight="false"
                android:typeface="normal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cor_cinza_fraco"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView3"
                android:layout_weight="5"
                android:src="@android:drawable/ic_menu_call" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Reclamações"
                android:id="@+id/reclamações"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"

                android:layout_weight="1"
                android:background="@drawable/botao_main"
                android:textColor="@color/cor_letras_cinzas"
                android:textSize="16sp"
                android:typeface="normal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cor_cinza_fraco"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView4"
                android:layout_weight="5"
                android:src="@android:drawable/ic_menu_myplaces" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Estatísticas"
                android:id="@+id/estatisticas"
                android:layout_weight="1"
                android:background="@drawable/botao_main"
                android:textSize="16sp"
                android:textColor="@color/material_blue_grey_800"
                android:typeface="normal"
                android:singleLine="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cor_cinza_fraco"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.56"
        android:contextClickable="false"
        android:background="@drawable/gradiente_azul"
        android:elevation="8dp"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"></LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView5"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_logo_governo_federal_00"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"></LinearLayout>

    </LinearLayout>

</LinearLayout>
